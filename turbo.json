{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "setup": {
      "cache": false,
      "dependsOn": ["^setup"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev", "setup"]
    },
    "build": {
      "dependsOn": ["^build", "setup"],
      "env": [
        "ANTHROPIC_API_KEY",
        "OPENAI_API_KEY",
        "LLM_MODEL",
        "AUTH0_SECRET",
        "AUTH0_BASE_URL",
        "AUTH0_ISSUER_BASE_URL",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_AUDIENCE",
        "APEGPT_API_URL",
        "JWT_PUBLIC_KEY",
        "JWT_PRIVATE_KEY",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "FREE_TIER_QUOTA",
        "REQUEST_ACCESS_EMAIL",
        "REDIS_URL",
        "NEXT_PUBLIC_GOOGLE_ANALYTICS",
        "NEXT_PUBLIC_MUIX_LICENSE_KEY",
        "NEXT_PUBLIC_VERCEL_URL"
      ]
    },
    "lint": {},
    "test": {}
  }
}